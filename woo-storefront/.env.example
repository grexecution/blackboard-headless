# WordPress/WooCommerce Backend
WP_BASE_URL=http://localhost:8000
# Or for production:
# WP_BASE_URL=https://example.com

# WooCommerce REST API Credentials
WOO_CONSUMER_KEY=ck_your_consumer_key_here
WOO_CONSUMER_SECRET=cs_your_consumer_secret_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl

# WordPress JWT Authentication (if using JWT Auth plugin)
JWT_AUTH_SECRET_KEY=your-jwt-secret-key-here

# Stripe (handled by WooCommerce)
# No direct Stripe keys needed here - WooCommerce handles this

# Optional: Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Optional: Edge Caching
REVALIDATE_SECRET=your-revalidation-secret-here